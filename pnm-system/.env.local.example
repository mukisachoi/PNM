# 앱 설정
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PNM System

# OCR API 설정 (선택사항)
# Tesseract.js는 클라이언트에서 실행되므로 별도 API 키 불필요
# 추가 OCR 서비스 사용 시 여기에 추가

# 이메일 설정 (선택사항 - 이메일 알림 기능 사용 시)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@pnm-system.com

# 파일 업로드 설정
NEXT_PUBLIC_MAX_FILE_SIZE=5242880 # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# 세션 설정
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400 # 24 hours in seconds

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# 개발/프로덕션 모드
NODE_ENV=development

# 로깅 레벨
LOG_LEVEL=debug # debug, info, warn, error

# 백업 설정 (선택사항)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * * # 매일 새벽 2시
BACKUP_RETENTION_DAYS=30